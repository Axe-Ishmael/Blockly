<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="12dp"
        android:textSize="18sp"
        android:background="#3F51B5"
        android:textColor="#FAFAFA"
        android:layout_centerInParent="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textView2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/back_bt"
            android:background="@drawable/return_back"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Button
        android:id="@+id/register_bt"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:background="@drawable/bt_selector"
        android:text="注册"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/name_et" />


    <EditText
        android:id="@+id/email_et"
        android:layout_width="261dp"
        android:layout_height="43dp"
        android:hint="请输入小于50字符的邮箱"
        android:background="@drawable/bg_edit"
        android:padding="4dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/password_et1"
        android:background="@drawable/bg_edit"
        android:layout_width="261dp"
        android:layout_height="43dp"
        android:ems="10"

        android:hint="请输入小于20字符的密码"
        android:padding="4dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
        android:id="@+id/password_et2"
        android:background="@drawable/bg_edit"
        android:layout_width="261dp"
        android:layout_height="43dp"
        android:paddingTop="4dp"
        android:hint="请再次输入小于20字符的密码"
        android:padding="4dp"
        android:cursorVisible="true"
        android:textCursorDrawable="@null"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/password_et1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.45" />

    <EditText
        android:id="@+id/name_et"
        android:hint="请输入小于20字符昵称"
        android:layout_width="261dp"
        android:layout_height="43dp"
        android:padding="4dp"
        android:ems="10"
        android:background="@drawable/bg_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/password_et2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.45" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/password_et1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.449">

        <EditText
            android:id="@+id/code_et"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edit"
            android:cursorVisible="true"
            android:hint="输入验证码"
            android:padding="4dp"
            android:textCursorDrawable="@null" />

        <Button
            android:id="@+id/get_code_bt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bt_bg_normal"
            android:text="获取验证码"
            android:textColor="@color/white" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>